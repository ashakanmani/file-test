pipeline
{
    agent any
    stages
    {
        stage('Continuous Download')
        {
    steps
    {
        git 'https://github.com/IntelliqDevops/maven.git'
    }
        }
        stage('Continuous Build')
        {
    steps
    {
        sh 'mvn package'
    }
}
stage('Continuous Deployment')
{
    steps
    {
        deploy adapters: [tomcat9(credentialsId: '6ce1037e-da05-4c1f-ad32-a1fb8d167030', path: '', url: 'http://172.31.6.184:8080')], contextPath: 'test', onFailure: false, war: '**/*'  
    }
}
stage('Continuous testing')
{
steps
{
    git 'https://github.com/IntelliqDevops/FunctionalTesting.git'
    sh 'java -jar /home/ubuntu/.jenkins/workspace/Declarativepipeline/testing.jar'
    
}
}
stage('Continuous Delivery') 
{
steps
{
    deploy adapters: [tomcat9(credentialsId: 'f51b0c58-3774-4088-a365-b0ba28d9cb3e', path: '', url: 'http://172.31.15.200:8080')], contextPath: 'prod', onFailure: false, war: '**/*'
}
}
    }
}
